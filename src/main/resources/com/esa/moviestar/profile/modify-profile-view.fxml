        <VBox fx:id="elementContainer" alignment="CENTER" prefHeight="362.0" prefWidth="294.0" spacing="20.0"
              GridPane.columnIndex="0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
