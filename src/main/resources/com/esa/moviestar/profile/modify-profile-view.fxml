                </VBox.margin>
                <Label fx:id="creationTitle" prefHeight="26.0" prefWidth="215.0"
                       stylesheets="@../styles/general.css" text="Edit your username:">
                    <styleClass>
                        <String fx:value="medium-text"/>
                        <String fx:value="on-primary"/>
                        <String fx:value="bold-text"/>
                    </styleClass>
                </Label>
                <TextField fx:id="textName" prefHeight="46.0" prefWidth="245.0" styleClass="register-box"
                           stylesheets="@../styles/access.css">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </TextField>
                <Label fx:id="errorText" alignment="CENTER" style="-fx-text-fill: #9E3536;"
