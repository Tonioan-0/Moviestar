                        <styleClass>
                            <String fx:value="primary"/>
                            <String fx:value="on-primary"/>
                            <String fx:value="small-item"/>
                            <String fx:value="small-text"/>
                        </styleClass>
                    </Button>
                    <Button fx:id="cancelButton" prefHeight="34.0" prefWidth="92.0"
                            style="-fx-border-color: #9E3536; -fx-border-width: 2; -fx-text-fill: #9E3536;"
                            text="Confirm">
                        <styleClass>
                            <String fx:value="small-item"/>
                            <String fx:value="small-text"/>
                            <String fx:value="surface-transparent"/>
                        </styleClass>
                    </Button>
                </HBox>

