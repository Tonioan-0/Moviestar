<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="parentContainer" prefHeight="600" prefWidth="800" styleClass="root-pane" stylesheets="@../styles/access.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esa.moviestar.settings.UpdatePasswordController">
    <children>
        <VBox fx:id="mainContainer" alignment="CENTER" fillWidth="false" spacing="20.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
            <VBox alignment="CENTER" prefHeight="549.0" prefWidth="490.0" spacing="20.0" stylesheets="@../styles/general.css">
               <children>
                  <HBox>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
            
                            <Button fx:id="backToSettingButton" alignment="CENTER_LEFT" mnemonicParsing="false" prefHeight="0.0" styleClass="back-button" text="← Indietro">
                           <padding>
                              <Insets bottom="10.0" left="30.0" top="10.0" />
                           </padding>
                            </Button>
                     </children>
                  </HBox>
      
                      <Label styleClass="welcome-text" text="UPDATE PASSWORD">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Label>
                  <HBox alignment="CENTER">
                     <children>
            
                            <PasswordField fx:id="oldPasswordField" maxWidth="420.0" prefHeight="45.0" prefWidth="420.0" promptText="Old Password" styleClass="password-field" />
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" spacing="8.0">
                     <children>
            
                            <PasswordField fx:id="newPasswordField" maxWidth="420.0" prefHeight="45.0" prefWidth="420.0" promptText="New Password" styleClass="password-field" VBox.vgrow="ALWAYS" />
      
                            <PasswordField fx:id="confirmPasswordField" maxWidth="420.0" prefHeight="45.0" prefWidth="420.0" promptText="Confirm New Password" styleClass="password-field" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
      
                      <Label fx:id="warningText" styleClass="warningText" />
      
                      <Button fx:id="updateButton" mnemonicParsing="false" prefHeight="55.0" prefWidth="255.0" style="-fx-font-size: 20;" styleClass="button-text" text="Confirm">
                     <font>
                        <Font size="9.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin></Button>
               </children>
               <styleClass>
                  <String fx:value="large-item" />
                  <String fx:value="surface-dim" />
                  <String fx:value="VBox-style" />
               </styleClass>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
