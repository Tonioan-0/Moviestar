<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<StackPane fx:id="parentContainer" prefHeight="600" prefWidth="800" styleClass="root-pane" xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esa.moviestar.settings.UpdatePasswordController">
    <stylesheets>
        <URL value="@../styles/access.css"/>
        <URL value="@../styles/general.css"/>
    </stylesheets>
    <VBox fx:id="mainContainer" alignment="CENTER" fillWidth="false" spacing="20.0">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>
        <VBox alignment="CENTER" prefHeight="549.0" prefWidth="490.0" spacing="20.0"
              stylesheets="@../styles/general.css">
            <styleClass>
                <String fx:value="large-item"/>
                <String fx:value="surface-dim"/>
                <String fx:value="VBox-style"/>
            </styleClass>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <HBox>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Button fx:id="backToSettingButton" mnemonicParsing="false"
                        prefHeight="0.0" styleClass="back-button" text="← Indietro">
                    <padding>
                        <Insets bottom="10.0" left="30.0" top="10.0"/>
                    </padding>
                </Button>
            </HBox>

            <Label styleClass="welcome-text" text="UPDATE PASSWORD">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER">
                <PasswordField fx:id="oldPasswordField" maxWidth="420.0" prefHeight="45.0" prefWidth="420.0"
                               promptText="Old Password" styleClass="password-field"/>
            </HBox>
            <VBox alignment="CENTER" spacing="8.0">
                <!-- Container per il campo new password con bottone toggle -->
                <StackPane fx:id="newPasswordContainer" alignment="CENTER_RIGHT" maxWidth="420.0">
                    <PasswordField fx:id="newPasswordField" prefHeight="45.0" prefWidth="420.0"
                                   promptText="New Password" styleClass="password-field" VBox.vgrow="ALWAYS"/>
                    <TextField fx:id="newPasswordTextField" managed="false" prefHeight="45.0" prefWidth="420.0"
                               promptText="New Password" styleClass="password-field" visible="false" VBox.vgrow="ALWAYS"/>
                    <Button fx:id="toggleNewPasswordButton" styleClass="toggle-password-button" />
                </StackPane>

                <!-- Container per il campo confirm password con bottone toggle -->
                <StackPane fx:id="confirmPasswordContainer" alignment="CENTER_RIGHT" maxWidth="420.0">
                    <PasswordField fx:id="confirmPasswordField" prefHeight="45.0" prefWidth="420.0"
                                   promptText="Confirm New Password" styleClass="password-field" VBox.vgrow="ALWAYS"/>
                    <TextField fx:id="confirmPasswordTextField" managed="false" prefHeight="45.0" prefWidth="420.0"
                               promptText="Confirm New Password" styleClass="password-field" visible="false" VBox.vgrow="ALWAYS"/>
                    <Button fx:id="toggleConfirmPasswordButton" styleClass="toggle-password-button" />
                </StackPane>
            </VBox>

            <Label fx:id="warningText" styleClass="warningText"/>

            <Button fx:id="updateButton" mnemonicParsing="false" prefHeight="55.0" prefWidth="255.0"
                    style="-fx-font-size: 20;" text="Confirm">
                <styleClass>
                    <String fx:value="button-text"/>
                    <String fx:value="on-primary"/>
                </styleClass>
                <font>
                    <Font size="9.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>
</StackPane>