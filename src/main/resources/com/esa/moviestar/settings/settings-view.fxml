<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="contenitore" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esa.moviestar.settings.SettingsViewController">
    <children>
        <BorderPane stylesheets="@../styles/general.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <VBox maxWidth="400.0" prefHeight="378.0" prefWidth="383.0" spacing="10.0" styleClass="surface-opaque" BorderPane.alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                    <Button fx:id="backToHomeButton" maxWidth="300.0" mnemonicParsing="false" styleClass="back-button" text="← Indietro" />
                    <Label fx:id="impostazioni" alignment="TOP_CENTER" text="Impostazioni Utente" VBox.vgrow="ALWAYS">
                        <styleClass>
                            <String fx:value="bold-text" />
                            <String fx:value="large-text" />
                            <String fx:value="on-secondary" />
                        </styleClass>
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" top="30.0" />
                        </VBox.margin>
                    </Label>
                    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                        <children>
                            <HBox fx:id="accountContent" alignment="CENTER_LEFT" maxHeight="70.0" styleClass="chips" VBox.vgrow="ALWAYS">
                                <children>
                                    <SVGPath content="%user" fill="white" />
                                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="73.0" text="Account">
                                        <styleClass>
                                            <String fx:value="bold-text" />
                                            <String fx:value="medium-text" />
                                            <String fx:value="on-primary" />
                                        </styleClass>
                                    </Label>
                                </children>
                            </HBox>
                            <HBox fx:id="cronologia" alignment="CENTER_LEFT" maxHeight="70.0" styleClass="chips" VBox.vgrow="ALWAYS">
                                <children>
                                    <SVGPath content="%history" fill="white" />
                                    <Label prefHeight="26.0" prefWidth="94.0" text="Cronologia">
                                        <styleClass>
                                            <String fx:value="bold-text" />
                                            <String fx:value="medium-text" />
                                            <String fx:value="on-primary" />
                                        </styleClass>
                                    </Label>
                                </children>
                            </HBox>
                            <HBox fx:id="privacy" alignment="CENTER_LEFT" maxHeight="70.0" styleClass="chips" VBox.vgrow="ALWAYS">
                                <children>
                                    <SVGPath content="%privacy" fill="white" />
                                    <Label prefHeight="26.0" prefWidth="166.0" text="Privacy &amp; Sicurezza">
                                        <styleClass>
                                            <String fx:value="bold-text" />
                                            <String fx:value="medium-text" />
                                            <String fx:value="on-primary" />
                                        </styleClass>
                                    </Label>
                                </children>
                            </HBox>
                            <HBox fx:id="accessibilità" alignment="CENTER_LEFT" maxHeight="70.0" styleClass="chips" VBox.vgrow="ALWAYS">
                                <children>
                                    <SVGPath content="%accessibility" fill="white" />
                                    <Label text="Accessibilità">
                                        <styleClass>
                                            <String fx:value="medium-text" />
                                            <String fx:value="bold-text" />
                                            <String fx:value="on-primary" />
                                        </styleClass>
                                    </Label>
                                </children>
                            </HBox>
                            <HBox fx:id="about" alignment="CENTER_LEFT" maxHeight="70.0" styleClass="chips" VBox.vgrow="ALWAYS">
                                <children>
                                    <SVGPath content="%about" fill="white" />
                                    <Label text="About &amp; Supporto ">
                                        <styleClass>
                                            <String fx:value="medium-text" />
                                            <String fx:value="bold-text" />
                                            <String fx:value="on-primary" />
                                        </styleClass>
                                    </Label>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </VBox>
            </left>
            <center>
                <StackPane fx:id="contentArea" prefHeight="378.0" prefWidth="370.0" styleClass="surface-dim-opaque" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
        <StackPane maxHeight="48.0" maxWidth="48.0" minHeight="48.0" minWidth="48.0" prefHeight="48.0" prefWidth="48.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <SVGPath content="%close" fill="#f5f5f5" styleClass="on-primary" />
            </children>
            <styleClass>
                <String fx:value="medium-item" />
                <String fx:value="surface-opaque" />
            </styleClass>
        </StackPane>
    </children>
</AnchorPane>
